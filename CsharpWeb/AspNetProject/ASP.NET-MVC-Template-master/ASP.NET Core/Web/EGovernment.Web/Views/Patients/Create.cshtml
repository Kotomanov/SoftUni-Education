@using EGovernment.Web.ViewModels.AppViewModels.PatientsViewModels
@model PatientUpdateInfoViewModel
@{
    ViewData["Title"] = "Create";
}
@if (TempData["Infomessage"] != null)
{
    <div class="alert alert-danger">@TempData["Infomessage"].ToString()</div>
}

<h1>Create Patient </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Add your address.add gp first medical record</h4>

            @*<div>
                    <p class="lead">
                        <a class="btn btn-secondary btn-lg" asp-controller="Doctors" asp-action="Search" role="button">Find your doctor</a>
                    </p>
                </div>*@
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" placeholder="First name" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" placeholder="Last name" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EGN"></label>
                <input asp-for="EGN" placeholder="Въведете Е Ге Не" class="form-control" />
                <span asp-validation-for="EGN" class="text-danger"></span>
            </div>

            <div class="invisible">
                <label asp-for="AddressId"></label>
                <input asp-for="AddressId" value="1" class="form-control disabled" />
                <span asp-validation-for="AddressId" class="text-danger disabled"></span>
            </div>

            <div class="invisible">
                <label asp-for="DoctorId"></label>
                <input asp-for="DoctorId" value="1" class="form-control disabled" />
                <span asp-validation-for="DoctorId" class="text-danger disabled"></span>
            </div>

            <div class="invisible">
                <label asp-for="MedicalRecordId"></label>
                <input asp-for="MedicalRecordId" value="125" class="form-control disabled" />
                <span asp-validation-for="MedicalRecordId" class="text-danger disabled"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Create your patient profile</button>
        </form>
    </div>
</div>
<br />
<div>
    <p class="lead">
        <a class="btn btn-secondary btn-lg" asp-controller="EGovServices" asp-action="SelectProfilesetOptions" role="button">Back</a>
    </p>
</div>

