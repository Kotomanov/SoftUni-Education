@model EGovernment.Web.ViewModels.AppViewModels.AddressViewModels.DeleteAddressViewModel
@{
    ViewData["Title"] = "Delete address";
}

<h1><i class="fas fa-exclamation-triangle"></i> You are about to remove an address <i class="fas fa-exclamation"></i> </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Delete the address</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" placeholder="get the fucking number here" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Delete Address</button>
        </form>
    </div>
</div>
<br />
<div>
    <p class="lead">
        <a class="btn btn-secondary btn-lg" asp-controller="Addresses" asp-action="Index" role="button">Back</a>
    </p>
</div>
