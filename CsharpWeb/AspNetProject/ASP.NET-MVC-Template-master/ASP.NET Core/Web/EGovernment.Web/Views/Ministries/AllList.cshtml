@model EGovernment.Web.ViewModels.AppViewModels.MinistriesViewModels.MinistriesCollectionViewModel
@{
    ViewData["Title"] = "Bulgarian Ministries List";
}

<div class="products-list">
    <h1>What can we do for you?</h1>
    <h2>We can serve with support for the institutions listed here:</h2>
    <br />
</div>

<p class="lead">
    <a class="btn btn-primary btn-lg" asp-controller="EGovServices" asp-action="Index" role="button">PROCEED TO EGOV SERVICES</a>
</p>
<br />  

@foreach (var ministry in Model.MinistriesList)
{
    <div class="media">
        <img class="d-flex align-self-start mr-4" src=@ministry.PictureLink alt="Generic placeholder image" height="180" width="380">
        <div class="media-body">
            <h5 class="mt-0">@ministry.Name</h5>
            <p> <a button type="button" class="alert-link" href="@ministry.Url" aria-pressed="true">Official Web Site</a> </p>
        </div>
    </div>
    <br />

}

<br />

<p class="lead">
    <a class="btn btn-primary btn-lg" asp-controller="EGovServices" asp-action="Index" role="button">PROCEED TO EGOV SERVICES</a>
</p>

<br />

