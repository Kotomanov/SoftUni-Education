@model EGovernment.Web.ViewModels.AppViewModels.DoctorsViewModels.SearchDoctorByNamesViewModel
@{
    ViewData["Title"] = "Search Doctor";
}
@if (TempData["Infomessage"] != null)
{
    <div class="alert alert-danger">@TempData["Infomessage"].ToString()</div>
}

<h3><i class="fas fa-search-location"></i> Search for a Doctor</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" placeholder="Enter first name " class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" placeholder="Enter last name " class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>
<br />
<div>
    <p class="lead">
        <a class="btn btn-secondary btn-lg" asp-controller="Doctors" asp-action="Index" role="button">Back</a>
    </p>
</div>