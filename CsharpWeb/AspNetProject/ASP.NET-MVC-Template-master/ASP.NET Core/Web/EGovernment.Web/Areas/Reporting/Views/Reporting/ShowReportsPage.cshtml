@using EGovernment.Web.Areas.Reporting.ViewModels

@model SearchByCountryViewModel
@{
    ViewData["Title"] = "ShowReportsPage";
}

@if (TempData["Infomessage"] != null)
{
    <div class="alert alert-danger">@TempData["Infomessage"].ToString()</div>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" active" aria-current="page">Main Reports Page</li>
    </ol>
</nav>

@{if (this.User.IsInRole("Administrator"))
    {
        <h4>You have Administrator role and access to the following reports: </h4>
        <hr />
        <p class="lead">
            <a class="btn btn-primary btn-lg" asp-area="Reporting" asp-controller="Reporting" asp-action="ShowAddressReports" role="button">Go to Address Reports</a>
        </p>
        <hr />
        <p class="lead">
            <a class="btn btn-secondary btn-lg" asp-area="" asp-controller="UnderConstruction" asp-action="Index" role="button">Go to Doctor Reports</a>
        </p>
        <hr />
        <p class="lead">
            <a class="btn btn-secondary btn-lg" asp-area="" asp-controller="UnderConstruction" asp-action="Index" role="button">Go to Patient Reports</a>
        </p>
        <hr />
        <div>
            <p class="lead">
                <a class="btn btn-outline-link btn-lg" asp-area="" asp-controller="EGovServices" asp-action="SelectProfileSetOptions" role="button">Back to EGov Services Index </a>
            </p>
        </div>
    }
    else
    {
        <h4>You need Administrator role in order to access the reports </h4>
    }
}

   