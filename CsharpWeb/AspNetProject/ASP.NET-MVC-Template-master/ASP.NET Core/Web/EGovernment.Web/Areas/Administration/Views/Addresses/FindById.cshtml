@model EGovernment.Web.ViewModels.AppViewModels.AddressViewModels.SearchAddressByIdViewModel

@{
    ViewData["Title"] = "Search for address";
}
@if (TempData["Infomessage"] != null)
{
    <div class="alert alert-danger">@TempData["Infomessage"].ToString()</div>
}
<h1><i class="fas fa-search-location"></i></h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" placeholder="Enter address id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Check it!</button>
        </form>
    </div>
</div>
<br />
<div>
    <p class="lead">
        <a class="btn btn-secondary btn-lg" asp-area="Administration" asp-controller="Addresses" asp-action="Index" role="button">Back</a>
    </p>
</div>